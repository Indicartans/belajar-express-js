<div class="container mt-3">
  <div class="row">
    <div class="md-col-8">
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Contact tidak ditemukan.
        <a href="/contact" class="alert-link">Kembali ke daftar contact</a>.
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.noTelp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info">Edit</a>
          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger" onclick="return confirm('Apakah anda yakin ingin menghapus <%= contact.nama %>?')">Hapus</a>
          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; Kembali ke daftar contacts</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
